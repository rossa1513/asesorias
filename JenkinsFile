pipeline {
    agent any

    stages {
        stage('Clonacion del Repositorio') {
            steps {
                git branch: 'main', url: 'https://github.com/rossa1513/asesorias.git'
            }
        }
        stage('Construccion de Docker image') {
            steps{
                script {
                    docker.build('myapp-modulo:v1', '.')
                }
            }
        }
        stage('Desplegar contenedores docker') {
            steps {
                script {
                    bat 'docker-compose up -d'
                }
            }
        }
        stage('Print PATH') {
            steps {
                bat 'echo %PATH%'  // Este es el comando de Windows en el contexto de Jenkins
            }
        }
    }

}